<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_USERIDEASTOOLBAR</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2016 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.0</version>
    <creationDate>17 November, 2016</creationDate>
    <description><![CDATA[
    <p>Content - UserIdeas Toolbar is a plugin that adds a toolbar with sorting options and search field on your website.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="https://extensions.joomla.org/extensions/extension/contacts-and-feedback/testimonials-a-suggestions/user-ideas" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_USERIDEASTOOLBAR_HELP_URL"/>
    
    <files>
        <filename plugin="userideastoolbar">userideastoolbar.php</filename>

        <folder>language</folder>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic" >
                <field name="show_post_button" type="radio" default="0" class="btn-group btn-group-yesno" label="PLG_CONTENT_USERIDEASTOOLBAR_SHOW_BUTTON_POST" description="PLG_CONTENT_USERIDEASTOOLBAR_SHOW_BUTTON_POST_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="show_search_form" type="radio" default="0" class="btn-group btn-group-yesno" label="PLG_CONTENT_USERIDEASTOOLBAR_SHOW_SEARCH_FORM" description="PLG_CONTENT_USERIDEASTOOLBAR_SHOW_SEARCH_FORM_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="show_statuses" type="radio" default="0" class="btn-group btn-group-yesno" label="PLG_CONTENT_USERIDEASTOOLBAR_SHOW_STATUSES" description="PLG_CONTENT_USERIDEASTOOLBAR_SHOW_STATUSES_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset name="sorting" label="PLG_CONTENT_USERIDEASTOOLBAR_SORTING_FILTERS">
                <field name="show_sort_title" type="radio" class="btn-group" label="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_TITLE_ALPHABETICALLY" description="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_TITLE_ALPHABETICALLY_DESC" default="1">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field name="show_sort_votes" type="radio" class="btn-group" label="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_MOST_VOTED" description="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_MOST_VOTED_DESC" default="1">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field name="display_sort_recent" type="radio" class="btn-group" label="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_LATEST" description="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_LATEST_DESC" default="1">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field name="display_sort_popular" type="radio" class="btn-group" label="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_POPULAR" description="PLG_CONTENT_USERIDEASTOOLBAR_DISPLAY_POPULAR_DESC" default="1">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field name="sort_item_class" type="text" label="PLG_CONTENT_USERIDEASTOOLBAR_ITEM_CLASS" description="PLG_CONTENT_USERIDEASTOOLBAR_SORT_ITEM_CLASS_DESC"/>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="Plugin - UserIdeas Toolbar">http://cdn.itprism.com/updates/userideas/plg_content_userideastoolbar.xml</server>
    </updateservers>
</extension>
